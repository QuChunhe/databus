<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

<subscriber>
    <class>databus.network.KafkaSubscriber</class>
    <kafka>
        <servers>127.0.0.1:9092</servers>
        <groupId>127.0.0.2</groupId>
        <maxThreadPoolSize>4</maxThreadPoolSize>
        <fromBeginning>false</fromBeginning>
        <beginTime>0</beginTime>
    </kafka> 
  
    <receiver>
        <class>databus.receiver.redis.RedisSlave4Mysql</class>
        <remoteTopic>127.0.0.1/MYSQL/1/test</remoteTopic>
        <redis>
            <host>127.0.0.1</host>
            <port>6379</port>
            <timeout>40</timeout>
            <maxTotal>10</maxTotal>
            <maxIdle>3</maxIdle>
            <minIdle>1</minIdle>
        </redis>
       <system>adm</system>
       <replicatedTables>
         <user>age, position, salary</user>
         <book>name, isdn, author</book>
       </replicatedTables>
    </receiver>
</subscriber>

</configuration>
