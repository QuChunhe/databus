<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
<global> 
    <id>filter</id>  
    <class>databus.listener.mysql.DuplicateRowFilter</class>
    <expireAfterWrite>600</expireAfterWrite>
</global>

<publisher> 
    <class>databus.network.kafka.KafkaPublisher</class>
    <kafka>
        <server>127.0.0.1:9092</server>
        <acks>1</acks>        
    </kafka>

    <listener>
        <class>databus.listener.mysql.Master2MasterListener</class>
        <mysql>
            <host>127.0.0.1</host>
            <port>3306</port>
            <user>root</user>
            <password>quchunhe</password>
            <serverId>3</serverId>
            <permittedTables>test.user</permittedTables>
            <binlogFileName>master-bin.000005</binlogFileName>
            <position>1428615</position>
        </mysql>
        <topic>test/mysql</topic>
        <setter>
            <method>setDuplicateRowFilter</method>
            <parameter>filter</parameter>
        </setter>
    </listener> 
</publisher>

<subscriber>
    <class>databus.network.kafka.KafkaSubscriber</class>
    <kafka>
        <consumerConfig>conf/kafka_consumer.properties</consumerConfig>
        <pollingTimeout>2000</pollingTimeout>
        <writePerFlush>1</writePerFlush>
    </kafka> 
    <receiver>
        <class>databus.receiver.mysql.Master2MasterReplication</class>
        <remoteTopic>127.0.0.1:9092/test.mysql2</remoteTopic>
        <mysql>
            <url>jdbc:mysql://127.0.0.1:3306/test</url>
            <username>root</username>
            <password>quchunhe</password>
            <driverClassName>com.mysql.jdbc.Driver</driverClassName>
            <initialSize>1</initialSize>
            <maxActive>10</maxActive>
            <maxIdle>5</maxIdle>
            <minIdle>0</minIdle>
            <maxWait>50000</maxWait>
            <defaultAutoCommit>true</defaultAutoCommit>
            <connectionProperties>useUnicode=true;characterEncoding=UTF-8</connectionProperties>
        </mysql>
        <setter>
            <method>setDuplicateRowFilter</method>
            <parameter>filter</parameter>
        </setter>
    </receiver> 
</subscriber>

</configuration>
